{
  "name": "cbox",
  "version": "0.3.0",
  "description": "Maps file directories to CouchDB databases",
  "preferGlobal": "true",
  "main": "./lib/index.js",
  "bin": {
    "cbox": "./bin/index.js"
  },
  "directories": {
    "test": "tests",
    "lib": "lib"
  },
  "scripts": {
    "env": "env | grep npm",
    "pretest": "standard bin/*.js lib/**/*.js test/**/*.js && jscoverage lib lib-cov",
    "test": "mocha -r test",
    "doc": "jsdoc -c jsdoc.conf.json -t ./node_modules/ink-docstrap/template -r lib -d doc -R readme.md",
    "doc:watch": "echo TODO",
    "cov": "npm run test -- --reporter html-cov > coverage.html",
    "lcov": "npm run test -- -R mocha-lcov-reporter",
    "coveralls": "npm run test -- -R mocha-lcov-reporter | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:garbados/cbox.git"
  },
  "keywords": [
    "couchdb",
    "watch",
    "files",
    "sync",
    "replicate",
    "replication"
  ],
  "author": "Diana Thayer <garbados@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "coveralls": "^2.6.1",
    "ink-docstrap": "^1.2.1",
    "jscoverage": "^0.5.3",
    "jsdoc": "^3.4.0",
    "mocha": "^1.13.0",
    "standard": "^7.1.2"
  },
  "dependencies": {
    "bluebird": "^3.4.0",
    "commander": "^2.9.0",
    "coveralls": "^2.11.9",
    "dive": "^0.3.0",
    "mime": "^1.3.4",
    "mocha": "^1.21.5",
    "mocha-lcov-reporter": "^0.0.1",
    "nano": "^4.7.1",
    "underscore": "^1.8.3",
    "winston": "^0.7.2"
  }
}
