{
  "name": "cbox",
  "version": "0.3.0",
  "description": "Maps file directory to a CouchDB database",
  "preferGlobal": "true",
  "main": "./lib/index.js",
  "bin": {
    "cbox": "./bin/index.js"
  },
  "directories": {
    "test": "tests",
    "lib": "lib"
  },
  "scripts": {
    "test": "grunt",
    "doc": "jsdoc -r lib -d doc -R readme.md",
    "cov": "mocha --reporter html-cov > coverage.html",
    "lcov": "mocha -R mocha-lcov-reporter",
    "coveralls": "mocha -R mocha-lcov-reporter | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:garbados/cbox.git"
  },
  "keywords": [
    "couchdb",
    "watch",
    "files",
    "sync",
    "replicate",
    "replication"
  ],
  "author": "Diana Thayer <garbados@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "grunt": "^0.4.2",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-jshint": "^0.6.4",
    "grunt-jscoverage": "^0.0.3",
    "grunt-simple-mocha": "^0.4.0",
    "jscoverage": "^0.5.3",
    "jsdoc": "^3.4.0",
    "coveralls": "^2.6.1",
    "matchdep": "^0.3.0",
    "mocha": "^1.13.0"
  },
  "dependencies": {
    "bluebird": "^3.4.0",
    "commander": "^2.9.0",
    "coveralls": "^2.11.9",
    "dive": "^0.3.0",
    "grunt-simple-mocha": "^0.4.1",
    "mime": "^1.3.4",
    "mocha": "^1.21.5",
    "mocha-lcov-reporter": "^0.0.1",
    "nano": "^4.7.1",
    "underscore": "^1.8.3",
    "watch": "^0.8.0",
    "winston": "^0.7.2"
  }
}
