{
  "name": "quilter",
  "version": "0.2.0",
  "description": "Maps file directory to a Cloudant database",
  "preferGlobal": "true",
  "main": "./lib/index.js",
  "bin": {
    "quilt": "./bin/index.js"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "./node_modules/.bin/grunt",
    "cov": "./node_modules/.bin/mocha --reporter html-cov > coverage.html",
    "lcov": "./node_modules/.bin/mocha -R mocha-lcov-reporter",
    "coveralls": "./node_modules/.bin/mocha -R mocha-lcov-reporter | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:garbados/quilt.js.git"
  },
  "keywords": [
    "couchdb",
    "cloudant",
    "watch",
    "files",
    "sync",
    "replicate",
    "replication",
    "edgewise"
  ],
  "author": "Max Thayer <garbados@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "grunt": "~0.4.2",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-jshint": "~0.6.4",
    "grunt-jscoverage": "0.0.3",
    "grunt-simple-mocha": "~0.4.0",
    "jscoverage": "^0.5.3",
    "matchdep": "~0.3.0",
    "mocha": "~1.13.0"
  },
  "dependencies": {
    "watch": "~0.8.0",
    "nano": "~4.1.4",
    "async": "~0.2.9",
    "dive": "~0.3.0",
    "underscore": "~1.5.2",
    "mime": "~1.2.11",
    "optimist": "~0.6.0",
    "winston": "~0.7.2",
    "mocha-lcov-reporter": "0.0.1",
    "coveralls": "~2.6.1"
  }
}
